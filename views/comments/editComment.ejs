<%- include('../partials/header'); -%>

<div class="container" style="width: 40%; margin: 100px auto;">
    <h1 style="text-align: center">Edit Comment</h1>
    <div style="margin-top: 30px">
        <form action="/photoboards/<%= photoId %>/comments/<%=comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <textarea class="form-control" type="text" name="comment[text]" placeholder="text" cols="40" rows="5"><%=comment.text %></textarea>
            </div>
            <div class="form-group" style="text-align: center">
                <button class="btn btn-lg btn-secondary">Submit!</button>

            </div>

        </form>
        <div style="text-align: center">
            <a href="/photoboards/<%= photoId %>" style="margin: 0 auto">Go Back</a>
        </div>

    </div>
</div>
<%- include('../partials/footer'); -%>