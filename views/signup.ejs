<%- include('./partials/header'); -%>

        <form action="/signup" method="post" class="form-signin text-center">
            <img src="/icon/iconfinder_key__keywords__password__seo__management__tags__marketing_2310443.svg" alt="" width="100" height="100"/>
            <h1 class = "h3 mb-3 font-weight-normal">Sign up</h1>
            <div class="form-group">
                <input id="inputEmail" class="form-control" type="text" name="username" placeholder="Username" required>
            </div>

            <div class="form-group">
                <input id="inputUsername" class="form-control" type="email" name="email" placeholder="Email" >
            </div>

            <div class="form-group">
                <input id="inputPassword" class="form-control" type="password" name="password" placeholder="Password" required autofocus>
            </div>


            <button class="btn btn-lg btn-secondary btn-block form-control">Sign Up!</button>
            <a href="/photoboards">Go Back</a>
        </form>
<%- include('./partials/footer'); -%>
