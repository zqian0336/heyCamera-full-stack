<%- include('../partials/header'); -%>
<%- include('../partials/nav'); -%>


        <main role="main">
            <div id = "myCarousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1" class=""></li>
                    <li data-target="#myCarousel" data-slide-to="2" class=""></li>
                </ol>
                <div class="carousel-inner">

                    <div class="carousel-item active">
<!--                        <svg class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img"><rect width="100%" height="100%" style="background-image: url(http://res.cloudinary.com/heycameracloud/image/upload/v1585054527/p6qqybptldfmoktbniq6.jpg) " ></rect></svg>-->
                        <img class="d-block w-100 index-img" src="https://images.unsplash.com/photo-1517817748493-49ec54a32465?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2250&q=80" alt="First Slide">
                        <div class="container">
                            <div class="carousel-caption text-left">
                                <h1 class="textShadow">Welcome to HeyCamera</h1>
                                <p class="textShadow">Capturing moments from today…Creating memories for a lifetime</p>
                                <p>
                                    <a class="btn btn-light btn-large" href="/signup">Sign up today !</a>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="carousel-item">
                        <img class="d-block w-100 index-img" src="https://images.unsplash.com/photo-1545081039-4694706b6dd4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2250&q=80" alt="Search Engine Second Slide">
                        <div class="container">
                            <div class="carousel-caption text-left">
                                <h1 class="textShadow">Show the power behind the photo</h1>
                                <p class="textShadow">Photographs open doors into the past, but they also allow a look into the future.  <i>--Sally Mann</i></p>
                                <p>
                                    <a class="btn btn-light btn-large" href="/photoboards/new">Add New Photo</a>
                                </p>
                            </div>
                        </div>

                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 index-img" src="https://images.unsplash.com/photo-1495904786722-d2b5a19a8535?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1414&q=80" alt="Third Slide">
                        <div class="container">
                            <div class="carousel-caption">
                                <h1 class="textShadow">Explore the world</h1>
                                <p class="textShadow">Delta gets you there. We’re ready to fly.</p>
                                <div style="margin: 20px auto">
                                    <form class=" s-search real-search" action="/photoboards" method="GET" >
                                        <button  class="btn btn-link btn-sm border-0 s-search-button" type="submit"><img src="/icon/search.svg" height="16" width="16" class="s-search-icon" ></button>
                                        <div class="s-search-in" role="combobox">
                                            <input required name="search" class="s-search-input" type="search" placeholder="Start exploring... " aria-label="Search" value autocomplete="off" spellcheck="true">
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

        <!--            <h1><span class="glyphicon glyphicon-tent"></span> Welcome to HeyCamera</h1>-->
        <!--            <p>View our hand-picked Shows from all over the world</p>-->
        <!--            <p>-->
        <!--                <a class="btn btn-primary btn-large" href="/photoboards/new">Add New Photo</a>-->
        <!--            </p>-->
                </div>
                <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>

            </div>

            <div class="row flex-wrap container-fluid search-show" style="margin: 0 auto; display: flex">

                <%let s = Math.ceil(allPhotos.length/3)%>

                <div class="photoColumn search-show1">
                    <% for(let i = 0; i < s; i++){ %>

                        <div class="figure" style="margin: 20px 40px">
                            <img class="figure-img img-fluid rounded img-thumbnail" src="<%= allPhotos[i].image %>">
                            <!--                            <div class="overlay"></div>-->
                            <div class="avatar-on-figure">
                                <a href="/users/<%=allPhotos[i].author.id%>">
                                    <img class="rounded-circle zoom-avatar" src="<%=allPhotos[i].author.avatar%>" width="30" height="30">
                                </a>
                                <p class="textShadow" style="color: white; margin-left: 10px"><%=allPhotos[i].author.username%><p>
                            </div>
                            <div><a class="btn btn-light btn-sm img-text" role="button" href="/photoboards/<%= allPhotos[i]._id %>" >View More</a></div>
                        </div>
                    <%}%>
                </div>
                <div class="photoColumn search-show2">

                    <% for(let i = s; i < 2*s ; i++){ %>

                        <div class="figure" style="margin: 20px 40px">
                            <img class="figure-img img-fluid rounded img-thumbnail" src="<%= allPhotos[i].image %>">
                            <!--                            <div class="overlay"></div>-->
                            <div class="avatar-on-figure">
                                <a href="/users/<%=allPhotos[i].author.id%>">
                                    <img class="rounded-circle zoom-avatar" src="<%=allPhotos[i].author.avatar%>" width="30" height="30">
                                </a>
                                <p class="textShadow" style="color: white; margin-left: 10px"><%=allPhotos[i].author.username%><p>
                            </div>
                            <div><a class="btn btn-light btn-sm img-text" role="button" href="/photoboards/<%= allPhotos[i]._id %>" >View More</a></div>
                        </div>
                    <%}%>
                </div>
                <div class="photoColumn search-show3">
                    <% for(let i = 2*s; i < allPhotos.length ; i++){ %>


                        <div class="figure" style="margin: 20px 40px">
                            <img class="figure-img img-fluid rounded img-thumbnail" src="<%= allPhotos[i].image %>">

                            <!--                            <div class="overlay"></div>-->
                            <div class="avatar-on-figure">
                                <a href="/users/<%=allPhotos[i].author.id%>">
                                    <img class="rounded-circle zoom-avatar" src="<%=allPhotos[i].author.avatar%>" width="30" height="30">
                                </a>
                                <p class="textShadow" style="color: white; margin-left: 10px"><%=allPhotos[i].author.username%><p>
                            </div>
                            <div><a class="btn btn-light btn-sm img-text" role="button" href="/photoboards/<%= allPhotos[i]._id %>" >View More</a></div>
                        </div>
                    <%}%>
                </div>
            </div>
        </main>



